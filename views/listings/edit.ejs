<% layout("../layouts/boilerPlate.ejs") %>

  <form method="post" action="/listing/<%=listing._id%>?_method=patch" enctype="multipart/form-data">
    <div class="row">
      <div class="col col-8 offset-2">
        <h2>Edit your listing details</h2>
        <div>
          <label for="title" class="form-label">title</label>
          <input
            name="listing[title]"
            value="<%=listing.title%>"
            class="form-control"
          />
        </div>

        <div>
          <label for="description" class="form-label">description</label>
          <textarea name="listing[description]" class="form-control">
<%=listing.description%>
</textarea
          >
        </div>

        <div class="mb-3" >
          original image <br>
          <img src="<%=originalImageUrl%>">
        </div>

        <div>
          <label for="img url" class="form-label">upload new image</label>
          <input
            name="listing[image]"
            class="form-control"
            type="file"
          />
        </div>

        <div class="row">
          <div class="col col-md-4">
            <label for="price" class="form-label">price</label>
            <input
              name="listing[price]"
              value="<%=listing.price%>"
              class="form-control"
            />
          </div>

          <div class="col col-md-8">
            <label for="country" class="form-label">country</label>
            <input
              name="listing[country]"
              value="<%=listing.country%>"
              class="form-control"
            />
          </div>
        </div>

        <div>
          <label for="location" class="form-label">location</label>
          <input
            name="listing[location]"
            value="<%=listing.location%>"
            class="form-control"
          />
        </div>

        <br />
        <button class="btn btn-dark edit-btn">save</button>
      </div>
    </div>
  </form>
